<Window x:Class="IRM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="三轴热退磁数据处理软件" Height="650" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部菜单 -->
        <Menu>
            <MenuItem Header="数据处理" Click="DataProcess_Click"/>
            <MenuItem Header="历史记录" Click="DataHistory_Click"/>
            <MenuItem Header="关于" Click="About_Click"/>
        </Menu>

        <!-- 内容区域 -->
        <Frame x:Name="MainFrame" Grid.Row="1"/>
    </Grid>
        <Window.Icon>
        <Image Source="logo.ico"/>
    </Window.Icon>
</Window>
